</head>
<body>
    <%- include('../partials/nav') %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Özel Gün Yönetimi</h2>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSpecialDayModal">
                <i class="fas fa-plus"></i> Yeni Özel Gün
            </button>
        </div>

        <div class="row">
            <% specialDays.forEach(function(day) { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas <%= day.icon %> fa-2x me-3" style="color: <%= day.color %>"></i>
                                <h5 class="card-title mb-0"><%= day.name %></h5>
                            </div>
                            <p class="card-text">
                                <small class="text-muted">Tarih: <%= day.date %></small>
                            </p>
                            <div class="d-flex justify-content-end">
                                <button type="button" class="btn btn-sm btn-outline-primary me-2" 
                                        onclick="editSpecialDay('<%= day._id %>', '<%= day.name %>', '<%= day.date %>', '<%= day.icon %>', '<%= day.color %>')">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                        onclick="deleteSpecialDay('<%= day._id %>')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

