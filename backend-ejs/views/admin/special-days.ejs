    <script>
        // Add new special day
        async function addSpecialDay() {
            const name = document.getElementById('name').value;
            const date = document.getElementById('date').value;
            const icon = document.querySelector('input[name="icon"]:checked').value;
            const color = document.getElementById('color').value;

            try {
                const response = await apiRequest('/api/special-days', {
                    method: 'POST',
                    body: JSON.stringify({ name, date, icon, color })
                });

                if (response && response.ok) {
                    location.reload();
                } else {
                    alert('Özel gün eklenirken bir hata oluştu');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Özel gün eklenirken bir hata oluştu');
            }
        }

        // Edit special day
        function editSpecialDay(id, name, date, icon, color) {
            document.getElementById('editId').value = id;
            document.getElementById('editName').value = name;
            document.getElementById('editDate').value = date;
            document.querySelector(`input[name="editIcon"][value="${icon}"]`).checked = true;
            document.getElementById('editColor').value = color;
            
            new bootstrap.Modal(document.getElementById('editSpecialDayModal')).show();
        }

        // Update special day
        async function updateSpecialDay() {
            const id = document.getElementById('editId').value;
            const name = document.getElementById('editName').value;
            const date = document.getElementById('editDate').value;
            const icon = document.querySelector('input[name="editIcon"]:checked').value;
            const color = document.getElementById('editColor').value;

            try {
                const response = await apiRequest(`/api/special-days/${id}`, {
                    method: 'PUT',
                    body: JSON.stringify({ name, date, icon, color })
                });

                if (response && response.ok) {
                    location.reload();
                } else {
                    alert('Özel gün güncellenirken bir hata oluştu');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Özel gün güncellenirken bir hata oluştu');
            }
        }

        // Delete special day
        async function deleteSpecialDay(id) {
            if (confirm('Bu özel günü silmek istediğinizden emin misiniz?')) {
                try {
                    const response = await apiRequest(`/api/special-days/${id}`, {
                        method: 'DELETE'
                    });

                    if (response && response.ok) {
                        location.reload();
                    } else {
                        alert('Özel gün silinirken bir hata oluştu');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Özel gün silinirken bir hata oluştu');
                }
            }
        }
    </script>
